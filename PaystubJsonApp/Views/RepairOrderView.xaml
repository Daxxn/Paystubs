										</StackPanel>
									</Expander>

									<StackPanel Grid.Row="3" Orientation="Horizontal">
										<TextBlock>Total Time</TextBlock>
										<TextBlock Text="{Binding Path=TotalTime}"/>
									</StackPanel>
								</Grid>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Border>
	</Grid>
</UserControl>
